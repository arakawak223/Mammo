{
  "name": "mamori-talk",
  "version": "0.1.0",
  "private": true,
  "description": "まもりトーク - 特殊詐欺・強盗対策アプリ",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "api:dev": "npm run dev --workspace=services/api",
    "api:build": "npm run build --workspace=services/api",
    "api:test": "npm run test --workspace=services/api",
    "mobile:start": "npm run start --workspace=apps/mobile",
    "api:test:e2e": "npm run test:e2e --workspace=services/api",
    "api:test:cov": "npm run test:cov --workspace=services/api",
    "ai:test": "cd services/ai && python -m pytest",
    "ai:dev": "cd services/ai && uvicorn app.main:app --reload --port 8000",
    "shared:build": "npm run build --workspace=packages/shared",
    "test:all": "npm run api:test && npm run ai:test",
    "typecheck": "cd services/api && npx tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\""
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8"
  }
}
