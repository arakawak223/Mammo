{
  "name": "mamori-talk",
  "version": "0.1.0",
  "private": true,
  "description": "まもりトーク - 特殊詐欺・強盗対策アプリ",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "api:dev": "npm run dev --workspace=services/api",
    "api:build": "npm run build --workspace=services/api",
    "api:test": "npm run test --workspace=services/api",
    "mobile:start": "npm run start --workspace=apps/mobile",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\""
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
